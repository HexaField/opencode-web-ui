{
  "name": "@hexafield/opencode-web-ui",
  "version": "0.0.1",
  "description": "Web interface for OpenCode",
  "license": "MIT",
  "author": "HexaField",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:client": "vite dev --mode dev",
    "dev:server": "NODE_ENV=development tsx watch --env-file=.env.dev server/src/index.ts",
    "generate:certs": "mkdir -p server/certs && openssl req -x509 -newkey rsa:4096 -keyout server/certs/server.key -out server/certs/server.crt -days 365 -nodes -subj \"/C=US/ST=State/L=City/O=Organization/CN=localhost\"",
    "start:server": "tsx --env-file=.env.prod server/src/index.ts",
    "start:test": "concurrently \"pnpm run start:server\" \"pnpm run dev:client\"",
    "start": "pnpm run build && tsx --env-file=.env.prod server/src/index.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "check": "pnpm run format && tsc --noEmit && pnpm run lint && pnpm run test",
    "build": "vite build --mode prod",
    "preview": "vite preview",
    "lint": "oxlint --fix",
    "format": "oxfmt --write"
  },
  "dependencies": {
    "@opencode-ai/sdk": "1.1.53",
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "@xenova/transformers": "^2.17.2",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "dompurify": "^3.3.1",
    "express": "^5.2.1",
    "fast-glob": "^3.3.3",
    "marked": "^17.0.1",
    "monaco-editor": "^0.55.1",
    "node-cron": "^4.2.1",
    "node-pty": "^1.1.0",
    "playwright": "^1.58.1",
    "sharp": "^0.34.5",
    "solid-js": "1.9.10",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@playwright/test": "^1.57.0",
    "@solidjs/testing-library": "^0.8.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lightningcss": "1.30.2",
    "lint-staged": "^16.2.7",
    "node-gyp": "^12.2.0",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "supertest": "^7.1.4",
    "tailwindcss": "4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "7.3.0",
    "vite-plugin-solid": "2.11.10",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint --fix",
      "oxfmt --write"
    ],
    "*.{json,css,md,html}": [
      "oxfmt --write"
    ]
  },
  "packageManager": "pnpm@10.21.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "protobufjs",
      "sharp",
      "esbuild"
    ],
    "overrides": {
      "sharp": "^0.34.5"
    }
  }
}
